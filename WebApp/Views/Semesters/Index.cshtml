@model IEnumerable<WebApp.Models.ViewModels.Semester>

@{
    ViewData["Title"] = "Index";
}

<h2>Semesters</h2>

<br />

<form>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="Name">Name</label>
            <input type="text" class="form-control is-valid" id="semName" placeholder="Name">
            <div class="hidden" id="nameVMessage">
            </div>
        </div>
        <div class="form-group col-md-3">
            <label for="StartDate">Start Date</label>
            <input type="date" class="form-control" id="semStartDate" placeholder="endDate">
            <div class="hidden" id="startDVMessage">
            </div>
        </div>
        <div class="form-group col-md-3">
            <label for="EndDate">End Date</label>
            <input type="date" class="form-control" id="semEndDate" placeholder="endDate">
            <div class="hidden" id="endDVMessage">
            </div>
        </div>
        <div class="form-group col-md-3">
            <label for="button"></label>
            <div>
                <button type="button" id="create" class="btn btn-primary mb-2">Create new semester</button>
            </div>
        </div>
    </div>
</form>

<br />
<br />
<table class="table" id="semsGrid">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <button type="button" name="editBtn" onclick="editBtn(this)" class="btn btn-warning mb-2">Edit</button>
                    <a href="/Semesters/Details/@item.Id" class="btn btn-info" role="button">View Disciplines</a>
                    @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript">

        var nameregex = /^[A-Z]+[a-z0-9 ]+$/;

        function nameValidation(nameVal) {
            var nameMessage = "";
            $('#semName').css('border', '');
            $('#nameVMessage').css('color', '');

            if (nameVal.length === 0) {
                nameMessage = "Name is required";
                $('#nameVMessage').text(nameMessage);
                $('#nameVMessage').attr('class', 'visible-lg');
                $('#semName').css('border', '2px solid #FF0000');
                $('#nameVMessage').css('color', 'red');
                return false;
            }
            else {
                if (nameVal.match(nameregex)) {
                    $('#nameVMessage').attr('class', 'hidden');
                    $('#nameVMessage').text();
                    return true;
                }
                else {
                    nameMessage = "Name must starts with uppercase and contains at least 2 letters";
                    $('#nameVMessage').text(nameMessage);
                    $('#nameVMessage').attr('class', 'visible-lg');
                    $('#semName').css('border', '2px solid #FF0000');
                    $('#nameVMessage').css('color', 'red');
                    return false;
                }
            }
        }

        function startDValidation(startDVal) {
            var startDMessage = "";
            $('#semStartDate').css('border', '');
            $('#startDVMessage').css('color', '');

            if (startDVal) {
                let isValid = Date.parse(startDVal)
                if (isValid) {
                    $('#startDVMessage').attr('class', 'hidden');
                    $('#startDVMessage').text();
                    return true;
                }
                else {
                    startDMessage = "Invalid start date";
                    $('#startDVMessage').text(startDMessage);
                    $('#startDVMessage').attr('class', 'visible-lg');
                    $('#semStartDate').css('border', '2px solid #FF0000');
                    $('#startDVMessage').css('color', 'red');
                    return false;
                }
            }
            else {
                startDMessage = "Start date is required";
                $('#startDVMessage').text(startDMessage);
                $('#startDVMessage').attr('class', 'visible-lg');
                $('#semStartDate').css('border', '2px solid #FF0000');
                $('#startDVMessage').css('color', 'red');
                return false;
            }
        }

        function endDValidation(endDVal) {
            var endDMessage = "";
            $('#semEndDate').css('border', '');
            $('#endDVMessage').css('color', '');

            if (endDVal) {
                let isValid = Date.parse(endDVal)
                if (isValid) {
                    $('#endDVMessage').attr('class', 'hidden');
                    $('#endDVMessage').text();
                    return true;
                }
                else {
                    endDMessage = "Invalid end date";
                    $('#endDVMessage').text(endDMessage);
                    $('#endDVMessage').attr('class', 'visible-lg');
                    $('#semEndDate').css('border', '2px solid #FF0000');
                    $('#endDVMessage').css('color', 'red');
                    return false;
                }
            } else {
                endDMessage = "End Date is required";
                $('#endDVMessage').text(endDMessage);
                $('#endDVMessage').attr('class', 'visible-lg');
                $('#semEndDate').css('border', '2px solid #FF0000');
                $('#endDVMessage').css('color', 'red');
                return false;
            }
        }

        $('#semName').on('change', function () {
            var nameVal = $(this).val();
            nameValidation(nameVal);
        })
        $('#semStartDate').on('change', function () {
            var strDVal = $(this).val();
            startDValidation(strDVal);
        })
        $('#semEndDate').on('change', function () {
            var endDVal = $(this).val();
            endDValidation(endDVal);
        })



        function saveBtn(result) {
            var childrens = $(result).parent().parent().children();
            var nameinput = $(childrens[1]).children();
            var startDateinput = $(childrens[2]).children();
            var endDateinput = $(childrens[3]).children();
            var semEditName = $(nameinput[0]).val();
            var semEditStartDate = $(startDateinput[0]).val();
            var semEditEndDate = $(endDateinput[0]).val();


            var id = $(childrens[0]).text();
            $.ajax(
                {
                    type: "PUT", //HTTP PUT Method
                    url: "Semesters/Edit", // Controller/View
                    data: { //Passing data
                        Id: id,
                        Name: semEditName, //Reading text box values using Jquery
                        StartDate: semEditStartDate,
                        EndDate: semEditEndDate
                    },
                    success: function (result) {
                        $(childrens[1]).empty()
                            .append(`<td>${result.name}</td>`);
                        $(childrens[2]).empty()
                            .append(`<td>${result.startDate.toString()}</td>`);
                        $(childrens[3]).empty()
                            .append(`<td>${result.endDate.toString()}</td>`);
                        $(childrens[4]).empty()
                            .append(`<td><button type="button" onclick="editBtn($(this))" class="btn btn-warning mb-2">Edit</button>
                                   <a href="/Semesters/Details/${id}" class="btn btn-info" role="button">View Disciplines</a><td>`);
                    }
                });
        };


        function editBtn(result) {

            var childrens = $(result).parent().parent().children();
            var semId = Number($(childrens[0]).text().trim());
            var semName = $(childrens[1]).text().trim();
            var semStartDate = $(childrens[2]).text().trim();
            var semtEndDate = $(childrens[3]).text().trim();

            $(childrens[1]).empty()
                .append(`<input type="text" class="form-control" value="${semName}" id="semNameEdit" placeholder="Name">`)
            $(childrens[2]).empty()
                .append(`<input type="date" class="form-control" value="${semStartDate}" id="semStartDateEdit" placeholder="StartDate">`)
            $(childrens[3]).empty()
                .append(`<input type="date" class="form-control" value="${semtEndDate}" id="semEndDateEdit" placeholder="EndDate">`)
            $(childrens[4]).empty()
                .append(`<button  onclick="saveBtn($(this))" type="button" name="saveBtn" class="btn btn-success mb-2">Save</button>
                       <a href="/Semesters/Details/${semId}" class="btn btn-info" role="button">View Disciplines</a>`)
        };



